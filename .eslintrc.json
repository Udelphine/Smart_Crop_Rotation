{
  "extends": ["eslint:recommended", "prettier"],
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module"
  },
  "env": {
    "node": true,
    "jest": true,
    "es2021": true
  },
  "rules": {
    "camelcase": "error",
    "consistent-return": "error",
    "eqeqeq": "error",
    "max-depth": ["error", 4],
    "max-lines-per-function": ["warn", 50],
    "no-console": "warn",
    "no-var": "error",
    "prefer-const": "error",
    "require-await": "error"
  }
}