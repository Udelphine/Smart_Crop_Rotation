# Application Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Authentication
JWT_SECRET=your_super_secret_jwt_key_change_in_production
JWT_EXPIRE=7d

# Database Configuration
# For SQLite (default)
SQLITE_DB_PATH=./database/crop_rotation.sqlite

# For MongoDB (alternative)
MONGODB_URI=mongodb://localhost:27017/crop_rotation

# Logging
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100